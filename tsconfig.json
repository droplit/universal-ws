{
    "compileOnSave": true,
    "compilerOptions": {
        "allowUnreachableCode": false,
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "target": "es6",
        "module": "commonjs",
        "inlineSourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "pretty": true,
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "./dist",
        "node_modules"
    ]
}